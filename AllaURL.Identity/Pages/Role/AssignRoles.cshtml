@page "{userId}"
@model AllaURL.Identity.Pages.Role.AssignRolesModel
@{
    ViewData["Title"] = "Assign Roles to User";
}

<h3>Assign Roles to User</h3>

<form method="post" asp-page-handler="AssignRole">
    <label>User Name:</label>
    <input asp-for="UserName" readonly />
    <label>Role Name:</label>
    <input asp-for="RoleName" />
    <button type="submit">Assign Role</button>
</form>

<form method="post" asp-page-handler="RemoveRole">
    <label>User Name:</label>
    <input asp-for="UserName" readonly />
    <label>Role Name:</label>
    <input asp-for="RoleName" />
    <button type="submit">Remove Role</button>
</form>

<div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p>@Model.Message</p>
    }
</div>

<h4>Assigned Roles</h4>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.AssignedRoles)
        {
            <tr>
                <td>@role</td>
            </tr>
        }
    </tbody>
</table>




