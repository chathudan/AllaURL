@page
@model AllaURL.Identity.Pages.Role.IndexModel
@{
    ViewData["Title"] = "Role Management";
}

<h3>Role Management</h3>

<form method="post" asp-page-handler="CreateRole">
    <label>Role Name:</label>
    <input asp-for="RoleName" />
    <button type="submit">Create Role</button>
</form>

<form method="post" asp-page-handler="UpdateRole">
    <label>Old Role Name:</label>
    <input asp-for="OldRoleName" />
    <label>New Role Name:</label>
    <input asp-for="NewRoleName" />
    <button type="submit">Update Role</button>
</form>

<form method="post" asp-page-handler="DeleteRole">
    <label>Role Name:</label>
    <input asp-for="DeleteRoleName" />
    <button type="submit">Delete Role</button>
</form>

<div>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p>@Model.Message</p>
    }
</div>

<h4>Existing Roles</h4>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>

<h4>Users</h4>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Assigned Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span>@role</span><br />
                    }
                </td>
                <td>
                    <a asp-page="/Role/AssignRoles" asp-route-userId="@user.Id">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
